{
  "manifest_version": 3,
  "name": "YouTube Live Chat Name Fixer",
  "version": "1.5",
  "description": "A browser extension that converts YouTube Live Chat handles into channel display names.",
  "action": {
    "default_icon": {
      "128": "icon/icon.png"
    }
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["main.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "128": "icon/icon.png"
  }
}

